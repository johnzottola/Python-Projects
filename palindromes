def checkpal(ustrlist1):
    list2=ustrlist1
    print(list2)
    print(list2[::-1])
    if (list2==list2[::-1]):
        return True
    else:
        return False
                   

def main():
    ustr = input("Please enter a string to check if it is a palindrome: ")
    ustrlist1 = list(ustr)
    print(ustr, " is a palindrome: ", checkpal(ustrlist1))

main()
